<style>
	.m-menu-bar{background: #fff; width:100%; height:35px;}
	.m-menu{position:absolute; right: 10px; top: 56px; z-index:9999;}
	.m-menu a{display: block; width:25px; height:20px; position: relative;}
	.m-menu a span{width: 100%; height: 3px; background: #000; display: block; position: absolute; transition: all 0.3s; border-radius: 10px;}
	.m-menu a span:nth-child(1){top:0px}
	.m-menu a span:nth-child(2){top:8px}
	.m-menu a span:nth-child(3){bottom:1px}
	
	.m-menu a.active span:nth-child(1){
		transform: rotate(315deg) translateY(7px) translateX(-6px);
	}
	.m-menu a.active span:nth-child(2){
		opacity:0;
	}
	.m-menu a.active span:nth-child(3){
		transform: rotate(-315deg) translateY(-6px) translateX(-4px);
	}
	.menu div {height: 0px; transition: all 0.3s;}
	.menu div.active{height: 120px;}
	}
</style>
