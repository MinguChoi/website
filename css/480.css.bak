.header{background: #000; overflow: hidden;}

.header .logo h1 {
    padding: 5px 10px;
}
.header .logo h1 img{
    width: 80px;
}
.header .top-btn ul {
    margin-top: 15px;
}
.header .top-btn ul li a {
    font-size: 12px;
    padding: 10px 5px;
    color: #fff;
}

.menu > div > ul > li {
    width: 45%;
}
.menu > div > ul > li a {
    display: block;
    padding: 10px;
    font-size: 15px;
    margin: 10px 20px;
}
.m-menu-bar{display:block; background: #fff; width:100%; height:35px;}
.m-menu{position:absolute; right: 10px; top: 56px; z-index:9999;}
.m-menu a{display: block; width:25px; height:20px; position: relative;}
.m-menu a span{width: 100%; height: 3px; background: #000; display: block; position: absolute; transition: all 0.3s; border-radius: 10px;}
.m-menu a span:nth-child(1){top:0px}
.m-menu a span:nth-child(2){top:8px}
.m-menu a span:nth-child(3){bottom:1px}

.m-menu a.active span:nth-child(1){
	transform: rotate(315deg) translateY(7px) translateX(-6px);
}
.m-menu a.active span:nth-child(2){
	opacity:0;
}
.m-menu a.active span:nth-child(3){
	transform: rotate(-315deg) translateY(-6px) translateX(-4px);
}
.menu {height:0px; transition: all 0.3s;}
.menu.active{height:auto;}
.menu.active div > ul > li {}

.menu > div > ul > li > ul.submenu {
    position: relative;
    z-index: 9;
    background: #fff;
    display: none;
    width: 100%;
}
.menu > div > ul > li > ul.submenu a {
    border-bottom:1px solid #ccc;
}
